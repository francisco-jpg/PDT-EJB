<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="ProyectoEJB">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/ProyectoDS</jta-data-source>
		<class>com.entities.Caracteristica</class>
		<class>com.entities.Departamento</class>
		<class>com.entities.Detalle</class>
		<class>com.entities.Fenomeno</class>
		<class>com.entities.Imagenes</class>
		<class>com.entities.Localidad</class>
		<class>com.entities.Observacion</class>
		<class>com.entities.Revisa</class>
		<class>com.entities.Usuario</class>
		<class>com.entities.Zona</class>
		
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="validate"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
		</properties>
	</persistence-unit>
</persistence>
